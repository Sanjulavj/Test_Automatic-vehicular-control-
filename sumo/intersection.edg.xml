<?xml version="1.0" encoding="UTF-8"?>
<edges xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/edges_file.xsd">

    <!--
        Naming convention: from_to
        Each arm has an inbound edge (approaching C) and
        an outbound edge (leaving C).
        numLanes="2"  → one lane each direction in a 2-lane road feel,
                         but here each edge is one-directional,
                         so 2 lanes means a wider approach.
        speed="13.89" → 50 km/h in m/s
    -->

    <!-- North arm -->
    <edge id="N_C" from="N" to="C" numLanes="2" speed="13.89"/>
    <edge id="C_N" from="C" to="N" numLanes="2" speed="13.89"/>

    <!-- South arm -->
    <edge id="S_C" from="S" to="C" numLanes="2" speed="13.89"/>
    <edge id="C_S" from="C" to="S" numLanes="2" speed="13.89"/>

    <!-- East arm -->
    <edge id="E_C" from="E" to="C" numLanes="2" speed="13.89"/>
    <edge id="C_E" from="C" to="E" numLanes="2" speed="13.89"/>

    <!-- West arm -->
    <edge id="W_C" from="W" to="C" numLanes="2" speed="13.89"/>
    <edge id="C_W" from="C" to="W" numLanes="2" speed="13.89"/>

</edges>
