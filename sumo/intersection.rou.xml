<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- ========================
         Vehicle Types
         ======================== -->
    <vType id="car"   accel="2.6" decel="4.5" sigma="0.5" length="5"  minGap="2.5" maxSpeed="13.89" guiShape="passenger"/>
    <vType id="truck" accel="1.3" decel="3.5" sigma="0.5" length="12" minGap="3.0" maxSpeed="11.11" guiShape="truck"/>

    <!-- ========================
         Routes (straight through)
         ======================== -->
    <route id="N_to_S" edges="N_C C_S"/>
    <route id="S_to_N" edges="S_C C_N"/>
    <route id="E_to_W" edges="E_C C_W"/>
    <route id="W_to_E" edges="W_C C_E"/>

    <!-- Routes (right turn) -->
    <route id="N_to_E" edges="N_C C_E"/>
    <route id="S_to_W" edges="S_C C_W"/>
    <route id="E_to_S" edges="E_C C_S"/>
    <route id="W_to_N" edges="W_C C_N"/>

    <!-- Routes (left turn) -->
    <route id="N_to_W" edges="N_C C_W"/>
    <route id="S_to_E" edges="S_C C_E"/>
    <route id="E_to_N" edges="E_C C_N"/>
    <route id="W_to_S" edges="W_C C_S"/>

    <!-- ========================
         Traffic Flows
         (vehsPerHour = vehicles per hour)
         Simulation runs 0–3600 seconds
         ======================== -->

    <!-- Main through traffic (N↔S, E↔W) -->
    <flow id="flow_N_S" type="car"   route="N_to_S" begin="0" end="3600" vehsPerHour="400"/>
    <flow id="flow_S_N" type="car"   route="S_to_N" begin="0" end="3600" vehsPerHour="400"/>
    <flow id="flow_E_W" type="car"   route="E_to_W" begin="0" end="3600" vehsPerHour="350"/>
    <flow id="flow_W_E" type="car"   route="W_to_E" begin="0" end="3600" vehsPerHour="350"/>

    <!-- Right turns -->
    <flow id="flow_N_E" type="car"   route="N_to_E" begin="0" end="3600" vehsPerHour="100"/>
    <flow id="flow_S_W" type="car"   route="S_to_W" begin="0" end="3600" vehsPerHour="100"/>
    <flow id="flow_E_S" type="car"   route="E_to_S" begin="0" end="3600" vehsPerHour="100"/>
    <flow id="flow_W_N" type="car"   route="W_to_N" begin="0" end="3600" vehsPerHour="100"/>

    <!-- Left turns -->
    <flow id="flow_N_W" type="car"   route="N_to_W" begin="0" end="3600" vehsPerHour="80"/>
    <flow id="flow_S_E" type="car"   route="S_to_E" begin="0" end="3600" vehsPerHour="80"/>
    <flow id="flow_E_N" type="car"   route="E_to_N" begin="0" end="3600" vehsPerHour="80"/>
    <flow id="flow_W_S" type="car"   route="W_to_S" begin="0" end="3600" vehsPerHour="80"/>

    <!-- Occasional trucks on main corridor -->
    <flow id="flow_truck_NS" type="truck" route="N_to_S" begin="0" end="3600" vehsPerHour="40"/>
    <flow id="flow_truck_EW" type="truck" route="E_to_W" begin="0" end="3600" vehsPerHour="40"/>

</routes>
